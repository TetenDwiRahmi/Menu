<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hijau3"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo2" />

    <ImageView
        android:id="@+id/imageEmail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/email" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="270dp"
        android:backgroundTint="@color/hijau2"
        android:hint="Email"
        android:paddingLeft="10sp"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/hijau2"
        android:textSize="18dp" />


    <ImageView
        android:id="@+id/imageLock"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/imageEmail"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/lock" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="355dp"
        android:hint="Password"
        android:textSize="18dp"
        android:inputType="textPassword"
        android:textColor="@color/colorWhite"
        android:drawableEnd="@drawable/closeeye"
        android:textColorHint="@color/hijau2"
        android:longClickable="false"
        android:paddingStart="10dp"/>


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPass"
        android:layout_marginTop="35dp"
        android:background="@drawable/radiuslogin"
        android:text="LOGIN"
        android:textColor="@color/hijau3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Not a member?"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginTop="35dp"
        android:background="@drawable/radiuslogin"
        android:text="REGISTER"
        android:textColor="@color/hijau3"
        android:textStyle="bold" />

</RelativeLayout>